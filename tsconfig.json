{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "downlevelIteration": true,
    "baseUrl": ".",
    "experimentalDecorators": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "services/woocommerce-*.ts",
    "scripts",
    "tools",
    "**/migrations/**",
    "**/test-*.ts",
    "**/test-*.js",
    "**/migrate-*.ts",
    "**/migrate-*.js"
  ]
}
